<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Air_3550">

    <Style TargetType="local:AirportSuggest" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AirportSuggest">
                    <AutoSuggestBox Width="200" AutomationProperties.Name="Basic AutoSuggestbox" 
                                        PlaceholderText="{TemplateBinding Label}"
                                        x:Name="SuggestBox"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
